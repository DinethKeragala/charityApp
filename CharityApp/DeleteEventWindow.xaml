<Window x:Class="CharityApp.DeleteEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Event" Height="200" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Are you sure you want to delete this event?" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10" TextAlignment="Center"/>

        <TextBlock x:Name="EventNameText" FontSize="14" Foreground="Red" 
                   TextAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Delete" Click="DeleteEvent_Click" Margin="5" Width="100"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="5" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>