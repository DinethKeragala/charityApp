<Window x:Class="CharityApp.AddCharityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Charity" Height="300" Width="400">

    <StackPanel Margin="20">
        <TextBlock Text="Add New Charity" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="Charity Name:" />
        <TextBox x:Name="NameTextBox" Margin="5"/>

        <TextBlock Text="Description:" />
        <TextBox x:Name="DescriptionTextBox" Margin="5"/>

        <TextBlock Text="Image URL:" />
        <TextBox x:Name="ImageTextBox" Margin="5"/>

        <Button Content="Add Charity" Click="AddCharity_Click" Margin="5" Width="150" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
